with Ada.Text_IO; use Ada.Text_IO;
with Ada.Integer_Text_IO; use Ada.Integer_Text_IO;
procedure bitmap is
   NMAX : constant INTEGER; -- Indice maximum du tableau
   TYPE TAB_VALEUR is ARRAY(1..NMAX) of FLOAT;
   TYPE TAB_BOOLEAN is ARRAY(1..NMAX) of BOOLEAN;
   tab_val : TAB_VALEUR; -- un tableau d'au maximum NMAX entiers
   tab_bool : TAB_BOOLEAN;
   imin, imax, i : INTEGER;
Begin
   tab_val := (4.1, 3.1, 0.0, 8.0, 4.0, 6.0, 8.0, 3.3, 9.0);

   for i in 1..nb_elements loop
     Put(un_tab(i)); -- Affichage du tableau
   end loop;
end bitmap;
